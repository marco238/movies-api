<div class="container my-5">
  {{#if movie}}
  <form action="/movies/update/{{movie._id}}" method="POST" style="max-width: 400px">
  {{else}}
  <form action="/movies/create" method="POST" style="max-width: 400px">
  {{/if}}
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" name="title" {{#if movie}}value="{{movie.title}}"{{/if}} id="title" placeholder="Escriba el title">
    </div>
    <div class="mb-3">
      <label for="year" class="form-label">Year</label>
      <input type="text" class="form-control" name="year" {{#if movie}}value="{{movie.year}}"{{/if}} id="year" placeholder="Escriba el year">
    </div>
    <div class="mb-3">
      <label for="director" class="form-label">Director</label>
      <input type="text" class="form-control" name="director" {{#if movie}}value="{{movie.director}}"{{/if}} id="director" placeholder="Escriba el director">
    </div>
    <div class="mb-3">
      <label for="duration" class="form-label">Duration</label>
      <input type="text" class="form-control" name="duration" {{#if movie}}value="{{movie.duration}}"{{/if}} id="duration" placeholder="Escriba el duration">
    </div>
    <div class="mb-3">
      <label for="genre" class="form-label">Genre</label>
      <input type="text" class="form-control" name="genre" {{#if movie}}value="{{movie.genre}}"{{/if}} id="genre" placeholder="Escriba el genre">
    </div>
    <div class="mb-3">
      <label for="rate" class="form-label">Rate</label>
      <input type="text" class="form-control" name="rate" {{#if movie}}value="{{movie.rate}}"{{/if}} id="rate" placeholder="Escriba el rate">
    </div>

    {{#if movie}}
    <button type="submit" class="btn btn-secondary">Update</button>
    {{else}}
    <button type="submit" class="btn btn-primary">Create</button>
    {{/if}}
  </form>
</div>